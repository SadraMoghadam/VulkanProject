#version 450layout(binding = 0) uniform sampler2D texSampler;layout(location = 0) in vec2 inCoord;layout(location = 1) in vec3 inColor;layout(location = 0) out vec4 outColor;void main(){    vec4 Tx = texture(texSampler, inCoord);    outColor = ((vec4(inColor, 1.0) * Tx.x) + (vec4(inColor, 1.0) * Tx.y)) + (vec4(0.0) * Tx.z);}